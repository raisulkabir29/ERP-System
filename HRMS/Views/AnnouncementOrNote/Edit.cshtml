        //});
</script>

@using (Html.BeginForm("Edit", "AnnouncementOrNote", FormMethod.Post, new { enctype = "multipart/form-data",id = "frmAnnouncementOrNote"  }))
{
    @Html.AntiForgeryToken()

        <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Edit AnnouncementOrNote</h3>
                    </div> 
                    <!-- form start -->
  
                    <div role="form">
                        <div class="box-body">
                              

                            <div class="form-group">
                                @Html.LabelFor(model => model.Title, new { @class = "" })
                                @Html.EditorFor(model => model.Title)  
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PostedDate, new { @class = "" }) 
                                @Html.EditorFor(model => model.PostedDate, new { htmlAttributes = new { @class = "" } })
                                <script> $(function () { $("#PostedDate").datepicker({ format: 'd/m/yy' }); }); </script> 
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.OfficeId, new { @class = "" })
                                @Html.DropDownList("OfficeId"," -Select- ") 
                                @Html.StarkDropDownAjaxLink("/Office/Create", "AddMore","")
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.DepartmentId, new { @class = "" })
                                @Html.DropDownList("DepartmentId"," -Select- ") 
                                @Html.StarkDropDownAjaxLink("/Department/Create", "AddMore","")
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Summary, new { @class = "" })
                                @Html.EditorFor(model => model.Summary)  
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, new { @class = "" })
                                @Html.TextAreaFor(model => model.Description, new { @class = "" }) 
                            </div>
                            <div class="form-group">
                                @Html.Hidden("DateAdded", DateTime.Now) 
                            </div>
                            <div class="form-group">
                                @Html.Hidden("AddedBy", Env.GetUserInfo("userid")) 
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.IsNote, new { @class = "" })
                                @Html.EditorFor(model => model.IsNote)  
                            </div>


                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            @Html.StarkInputButtion("Save","submit","btn btn-primary","") 
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}


