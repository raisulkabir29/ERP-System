                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Phone, new { @class = "" })
                                @Html.EditorFor(model => model.Phone)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Fax, new { @class = "" })
                                @Html.EditorFor(model => model.Fax)
                            </div>
