                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Address, new { @class = "" })
                                @Html.EditorFor(model => model.Address)
                            </div>
                            @Html.Hidden("DateAdded", DateTime.Now)
                            @Html.Hidden("AddedBy", Env.GetUserInfo("userid"))




                        </div>
                        <div class="box-footer">
