@model HRMS.Models.Company

@{
    ViewBag.Title = "Details";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}
<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>Details</small>*@
    </h1>
</section>
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of Company</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>Name</td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <td> About</td>
                                    <td>  @Html.Raw(Model.About)</td>
                                </tr>
                                <tr>
                                    <td>IsActive</td>
                                    <td>@Html.DisplayFor(model => model.IsActive)</td>
                                </tr>
                                <tr>
                                    <td>Website</td>
                                    <td>@Html.DisplayFor(model => model.Website)</td>
                                </tr>
                                <tr>
                                    <td>Phone</td>
                                    <td>@Html.DisplayFor(model => model.Phone)</td>
                                </tr>
                                <tr>
                                    <td>Fax</td>
                                    <td>@Html.DisplayFor(model => model.Fax)</td>
                                </tr>
                                @*<tr>
                                    <td>MapLatitude</td>
                                    <td>@Html.DisplayFor(model => model.MapLatitude)</td>
                                </tr>
                                <tr>
                                    <td>MapLongitude</td>
                                    <td>@Html.DisplayFor(model => model.MapLongitude)</td>
                                </tr>*@
                                <tr>
                                    <td>TaxNumberOrEIN</td>
                                    <td>@Html.DisplayFor(model => model.TaxNumberOrEIN)</td>
                                </tr>
                                <tr>
                                    <td> &nbsp;</td>
                                    <td> <img src="~/Uploads/@Model.Logo" width="200" /> </td>
                                </tr>
                                <tr>
                                    <td>Address</td>
                                    <td>@Html.DisplayFor(model => model.Address)</td>
                                </tr>
                                <tr>
                                    <td>DateAdded</td>
                                    <td>@Html.DisplayFor(model => model.DateAdded)</td>
                                </tr>
                                <tr>
                                    <td>ModifiedDate</td>
                                    <td>@Html.DisplayFor(model => model.ModifiedDate)</td>
                                </tr>


                            </table>
                            <div class="box-footer">
                                @Ajax.ModalDialogActionLink("Edit", "Edit/" + Model.Id, "Edit", "btn btn-primary")

                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>