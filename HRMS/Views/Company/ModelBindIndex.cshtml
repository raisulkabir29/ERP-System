@model IEnumerable<HRMS.Models.Company>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>Company List </small>
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">User Records</h3>
                </div><!-- /.box-header -->

                <div class="box-body table-responsive">

                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    <br /><br />
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <span id="found" class="label label-info"></span>

                            <table id="tbPages" class="table table-striped table-bordered">
                                <thead>
                                    <tr>

                                        @*<th> Id  </th>*@
                                        <th> Name  </th>
                                        <th> About  </th>
                                        <th> Is Active  </th>
                                        <th> Website  </th>
                                        <th> Phone  </th>
                                        <th> Fax  </th>
                                        @*<th> Map Latitude  </th>
                                        <th> Map Longitude  </th>*@
                                        <th> Tax Number Or E I N  </th>
                                        <th> Logo  </th>
                                        <th> Address  </th>
                                        <th> DateAdded  </th>
                                        <th> ModifiedDate  </th>


                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            @*<td> @Html.DisplayFor(modelItem => item.Id) </td>*@
                                            <td> @Html.DisplayFor(modelItem => item.Name) </td>
                                            <td> @Html.DisplayFor(modelItem => item.About) </td>
                                            <td> @Html.DisplayFor(modelItem => item.IsActive) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Website) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Phone) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Fax) </td>
                                            @*<td> @Html.DisplayFor(modelItem => item.MapLatitude) </td>
                                            <td> @Html.DisplayFor(modelItem => item.MapLongitude) </td>*@
                                            <td> @Html.DisplayFor(modelItem => item.TaxNumberOrEIN) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Logo) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Address) </td>
                                            <td> @Html.DisplayFor(modelItem => item.DateAdded) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ModifiedDate) </td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="box-footer">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</section>