@model HRMS.Models.UserPromotion

@{
    ViewBag.Title = "Are you sure you want to delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}


@Html.StarkAjaxFormSubmiter("frmUserPromotion", "tbUserPromotion", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                @*<small>@ViewBag.Title</small>*@
            </h1>
        </section>
    }
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of User Promotion</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>PromotionTitle</td>
                                    <td>@Html.DisplayFor(model => model.PromotionTitle)</td>
                                </tr>
                                <tr>
                                    <td>PromotionDate</td>
                                    <td>@Html.DisplayFor(model => model.PromotionDate)</td>
                                </tr>
                                <tr>
                                    <td>Description</td>
                                    <td>@Html.DisplayFor(model => model.Description)</td>
                                </tr>
                                <tr>
                                    <td>UserId</td>
                                    <td>@Html.DisplayFor(model => model.UserId)</td>
                                </tr>
                                <tr>
                                    <td>Date Added</td>
                                    <td>@Html.DisplayFor(model => model.DateAdded)</td>
                                </tr>
                                <tr>
                                    <td>Modified Date</td>
                                    <td>@Html.DisplayFor(model => model.ModifiedDate)</td>
                                </tr>


                            </table>
                            <div class="box-footer">

                                @using (Html.BeginForm("Delete", "UserPromotion", FormMethod.Post, new { id = "frmUserPromotion" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.StarkInputButtion("Delete", "submit", "btn btn-danger", "")
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary", @style = "margin-left:5px;" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>