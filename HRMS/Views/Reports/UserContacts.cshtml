@model HRMS.ModelDto.IndexDto
@{
    ViewBag.Title = "Contact Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    string css1 = Url.Content("~/Content/theme/bootstrap/css/bootstrap.min.css");
}

<style>
    select {
        width: 95%;
    }
</style>



<section class="content" style="background-color: #996600; background-image: url(@Url.Content("~/Content/wood-pattern.png"));">
    <!-- Small boxes (Stat box)  -->
    <div class="row">
	<script src="~/Scripts/jquery1.8.3.print.js"></script>
<link href="~/Content/datetimepicker-master/jquery.datetimepicker.css" rel="stylesheet" />
<script src="~/Content/datetimepicker-master/jquery.datetimepicker.min.js"> </script>
<script src="~/Content/datetimepicker-master/build/jquery.datetimepicker.full.min.js"></script>
<script src="~/Content/datetimepicker-master/build/jquery.datetimepicker.full.js"></script>
<link href="~/Content/theme/plugins/datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
<script src="~/Content/theme/plugins/datepicker/bootstrap-datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/custom.js"></script>
        <div class="col-md-3">


            <section class="content">
                <!-- Small boxes (Stat box) -->
                @using (Html.BeginForm("UserAttendence", "Reports", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmreport" }))
                {       <div class="col-xs-12">
                            @Html.DropDownList("UserList", "--Employees--")
                        </div>
                        <div class="clearfix"></div>
                        <br />
                        <div class="col-xs-12">
                            <input class="btn btn-default" value="Get" type="submit">
                        </div>

                        <div class="clearfix"></div>

                        <br /><br /><br />

                        <a class="btn btn-app" id="btnPrint">
                            <i class="fa fa-print"></i>
                            Print This
						</a>
                 }

            </section>


        </div>

        <div class="col-md-9">

            <div id="dvContainer" class="content invoice" style=" padding: inherit; min-height: 312mm;  margin:0px;width:100%; ">
                @Html.Raw(ViewBag.header)
<style>
                    @@media print {
                        .headerrow
                         {
                            background-color:#eee !important;
                            -webkit-print-color-adjust: exact;
                        }
                    }
                    td, th {
                        border: 1px solid black;
                    }

                    th {
                        padding:0px;
                        font-weight: bold;
                        border-top: 1px solid black;
                    }

                    .headerRow {
                        padding:8px;
                        background-color: #eee !important;
                        -webkit-print-color-adjust: exact;
                    }
                </style>
                <div style="margin-bottom:50px;">

                </div>
                <div class="row" style="font-size:12px;text-align:center;font-weight:bold;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">


                    <div style="text-align:center;font-size:30px;font-weight:bold;">Contact Details </div>
                    <div style="text-align:center;font-size:24px;font-weight:bold;">@Model.Name</div>


                    <div style="text-align:left;margin-left:40px;">

                        <div style="height:10px; margin-bottom:10px; ">

                        </div>



                        <div class="row">

                            <div class="col-xs-12">

                                <div style="width:96%;">



                                    @{if (Model.userPhone.Any())
                                    {
                                        <table id="tbInvoiceItem" class="table table-striped table-bordered">
                                            @if (Model.userPhone.Count() > 0)
                                            {

                                                <thead>
                                                    <tr>
                                                       <th style="padding:0px;width:50%"><div class="headerRow"> Phone Number  </div></th>
                                                       <th style="padding:0px;width:25%"><div class="headerRow"> Is Active  </div></th>
                                                       <th style="padding:0px;width:25%"><div class="headerRow"> Is Emergency  </div></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model.userPhone)
                                                    {
                                                        <tr>
                                                            <td>@item.PhoneNumber</td>
                                                            @{
                                                        string status = item.IsActive ? "Active" : "Inactive";
                                                        <td>@status</td>
                                                            }
                                                            @{
                                                        string emergency = item.IsEmergency ? "Active" : "Inactive";
                                                        <td>@status</td>
                                                            }
                                                        </tr>
                                                    }
                                                </tbody>
                                            }
                                            else
                                            {
                                                <tbody>
                                                    <tr><td colspan="3">No Record Found</td></tr>
                                                </tbody>
                                            }
                                        </table>
                                    }
                                    }


                                    @{
                                        if (Model.userEmail.Any())
                                        {
                                            <table id="tbInvoiceItem" class="table table-striped table-bordered">
                                                @if (Model.userEmail.Count() > 0)
                                                {
                                                    <thead>
                                                        <tr>

                                                           <th style="padding:0px;width:50%;"><div class="headerRow"> Email Address  </div></th>
                                                           <th style="padding:0px;width:25%;"><div class="headerRow"> Is Active  </div></th>
                                                           <th style="padding:0px;width:25%;"><div class="headerRow"> Is Emergency  </div></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.userEmail)
                                                        {
                                                            <tr>
                                                                <td>@item.EmailAddress</td>
                                                                @{
                                                        string status = item.IsActive ? "Active" : "Inactive";
                                                        <td>@status</td>
                                                                }
                                                                @{
                                                        string emergency = item.IsEmergency ? "Active" : "Inactive";
                                                        <td>@status</td>
                                                                }
                                                            </tr>
                                                        }
                                                    </tbody>
                                                }
                                                else
                                                {
                                                    <tbody>
                                                        <tr><td colspan="3">No Record Found</td></tr>
                                                    </tbody>
                                                }
                                            </table>
                                        }
                                    }

                                    @if (Model.userAddress.Any())
                                    {
                                        if (Model.userAddress.Count() > 0)
                                        {
                                            foreach (var item in Model.userAddress)
                                            {

                                                <div style="border:1px solid #000;border-radius:4px;">
                                                    @{
                                                if (item.IsEmergency)
                                                {
                                                    <span>Emergency Address:</span>
                                                }
                                                else
                                                {
                                                    <span>Address:</span>
                                                }
                                                    }
                                                    <br />@item.Line1<br />@item.Line2<br />@item.City<br />@item.PinCode
                                                    <br />@((item.NearBy != null) ? "NearBy-" + item.NearBy + "" : "")

                                                </div>

                                                <br />
                                            }
                                        }
                                    }


                                </div>


                            </div>


                        </div>
                        <div style="height:10px; margin-bottom:20px;">

                        </div>



                    </div>


                    <div class="clearfix"></div>


                </div>


                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-xs-5" style="padding-left:60px;"> @DateTime.Now.ToString("dd/MMM/yyyy hh:mm:tt")</div>
                        <div class="col-xs-4" style="margin-left:25%;padding-left:80px;">Printed by: @Env.GetUserInfo("name") </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        <a class="btn btn-app" id="btnPrint">
            <i class="fa fa-print"></i>
            Print This
        </a>
    </div>
</section>
