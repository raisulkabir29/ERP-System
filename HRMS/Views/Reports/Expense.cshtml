@model IEnumerable<HRMS.Models.Expense>
@{
    ViewBag.Title = "Expense";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    @@media print {
        body {
            -webkit-print-color-adjust: exact;
        }
    }
    td, th {
        border: 1px solid black;
        text-align: center;
    }

    th {
        font-weight: bold;
       
    }
</style>
@{
    string css1 = Url.Content("~/Content/theme/bootstrap/css/bootstrap.min.css");
}
<section class="content" style="background-color: #996600; background-image: url(@Url.Content("~/Content/wood-pattern.png"));">
    <!-- Small boxes (Stat box)  -->
    <div class="row">
	
	<script src="~/Scripts/jquery1.8.3.print.js"></script>
<link href="~/Content/datetimepicker-master/jquery.datetimepicker.css" rel="stylesheet" />
<script src="~/Content/datetimepicker-master/jquery.datetimepicker.min.js"> </script>
<script src="~/Content/datetimepicker-master/build/jquery.datetimepicker.full.min.js"></script>
<script src="~/Content/datetimepicker-master/build/jquery.datetimepicker.full.js"></script>
<link href="~/Content/theme/plugins/datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
<script src="~/Content/theme/plugins/datepicker/bootstrap-datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/custom.js"></script>
        <div class="col-md-3">


            <section class="content">
                <!-- Small boxes (Stat box) -->
                @using (Html.BeginForm("Expense", "Reports", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmreport" }))
                {
                        <div class="col-xs-12">
                            <input type="text" id="txtCal" name="FromDate" required style="width: 95%;" placeholder="From Date" />
                            <script> $(function () { $("#txtCal").datepicker({ Format: 'MM-dd-yyyy' }); }); </script>

                        </div>
                        <div class="clearfix"></div>
                        <br />
                    <div class="col-xs-12">
                        <input type="text" id="toCal" name="toDate" required style="width: 95%;" placeholder="To Date" />
                            <script> $(function () { $("#toCal").datepicker({ Format: 'MM-dd-yyyy' }); }); </script>

                        </div>
                        <div class="clearfix"></div>
                        <br />
                        <div class="col-xs-12">
                            <input class="btn btn-default" value="Get" type="submit">
                        </div>

                        <div class="clearfix"></div>

                        <br /><br /><br />


                        <a class="btn btn-app" id="btnPrint">
                            <i class="fa fa-print"></i>
                            Print This
                        </a>
                }

            </section>


        </div>

        <div class="col-md-9">
            <div id="dvContainer" class="content invoice" style=" padding: inherit; min-height: 312mm;margin:0px; width:100%; ">
               
                <style>
                    @@media print {
                        .headerrow {
                            background-color: #eee !important;
                            -webkit-print-color-adjust: exact;
                        }
                    }

                    td, th {
                        border: 1px solid black;
                    }

                    th {
                        padding: 0px;
                        font-weight: bold;
                        text-align: center;
                        border-top: 1px solid black;
                    }

                    .headerRow {
                        padding: 8px;
                        background-color: #eee !important;
                        -webkit-print-color-adjust: exact;
                    }
                    * {
                        margin: 0;
                        padding: 0;
                    }

                    #page-wrap {
                        width: 800px;
                        margin: 0 auto;
                    }

                    textarea {
                        border: 0;
                        font: 14px Georgia, Serif;
                        overflow: hidden;
                        resize: none;
                    }

                    table {
                        border-collapse: collapse;
                    }

                        table td, table th {
                            border: 1px solid black;
                            padding: 5px;
                        }

                    #customer {
                        overflow: hidden;
                    }

                    #customer-title {
                        font-size: 12px;
                        font-weight: bold;
                        float: left;
                    }

                    #meta {
                        margin-top: 1px;
                        width: 300px;
                        float: right;
                    }

                        #meta td {
                            text-align: right;
                        }

                            #meta td.meta-head {
                                text-align: left;
                                background: #eee;
                            }

                            #meta td textarea {
                                width: 100%;
                                height: 20px;
                                text-align: right;
                            }

                    #items {
                        clear: both;
                        width: 100%;
                        margin: 30px 0 0 0;
                        border: 1px solid black;
                    }

                        #items th {
                            background: #eee;
                        }

                        #items textarea {
                            width: 80px;
                            height: 50px;
                        }

                        #items tr.item-row td {
                            border: 0;
                            vertical-align: top;
                        }

                        #items td.description {
                            width: 300px;
                        }

                        #items td.item-name {
                            width: 175px;
                        }

                            #items td.description textarea, #items td.item-name textarea {
                                width: 100%;
                            }

                        #items td.total-line {
                            border-right: 0;
                            text-align: right;
                        }

                        #items td.total-value {
                            border-left: 0;
                            padding: 10px;
                        }

                            #items td.total-value textarea {
                                height: 20px;
                                background: none;
                            }

                        #items td.balance {
                            background: #eee;
                        }

                        #items td.blank {
                            border: 0;
                        }
                </style>

                <div style="margin-bottom:50px;">

                </div>
                <div class="" style="font-size: 12px; font-weight: bold; font-family: Georgia, Serif; ">
                    @Html.Raw(ViewBag.header)
                    <div id="page-wrap" style="width:100%;">


                        <div style="clear:both"></div>
                        @Html.Raw(ViewBag.CompanyDetails)


                        <table id="items">
                            <tr>
                                <th style="padding:0px;"><div class="headerRow">Purchase Date</div></th>
                                <th style="padding:0px;"><div class="headerRow">Title</div></th>
                                <th style="padding:0px;"><div class="headerRow">Purchased By</div></th>
                                <th style="padding:0px;"><div class="headerRow">Bill Attachment</div></th>
                                <th style="padding:0px;"><div class="headerRow">Remarks</div></th>
                                <th style="padding:0px;"><div class="headerRow">Amount</div></th>
                            </tr>
                            @if (Model.Any())
                            {
                                if (Model.Count() > 0)
                                {

                                    foreach (var item in Model)
                                    {
                                        <tr class="item-row">
                                            <td class="item-name"><div>@item.PurchaseDate.ToString("dd-MMM-yyyy")</div></td>
                                            <td class="description"><div>@item.Title</div></td>
                                            <td><div class="cost">@item.PurchasedBy</div></td>
                                            <td>
                                                <div class="qty">
                                                    @{
                                        if (item.BillAttachment != null)
                                        {
                                            <a href='~/uploads/@item.BillAttachment' target="_blank">View Bill</a>
                                        }
                                        else
                                        {
                                            <span>---</span>
                                        }
                                                    }
                                                </div>
                                            </td>
                                            <td><span class="price">@item.Remarks</span></td>
                                            <td><span>Rs.@item.Amount</span></td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="5">Total Amount</td><td>Rs.@ViewBag.amt</td></tr>
                                }
                                else
                                {
                                    <tr><td colspan="6">No Sales of today</td></tr>
                                }
                            }
                            else
                            {
                                <tr><td colspan="6">No Sales of today</td></tr>
                            }
                        </table>
                    </div>
                </div>
                <br />
                <br />
                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-xs-5" style="padding-left:60px;"> @DateTime.Now.ToString("dd/MMM/yyyy hh:mm:tt")</div>
                        <div class="col-xs-4" style="margin-left:25%;padding-left:80px;">Printed by: @Env.GetUserInfo("name") </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        <a class="btn btn-app" id="btnPrint">
            <i class="fa fa-print"></i>
            Print This
        </a>
    </div>
</section>
