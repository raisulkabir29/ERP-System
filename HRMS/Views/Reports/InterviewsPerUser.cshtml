@model HRMS.Models.Interview
@{
    ViewBag.Title = "Interview Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    @@media print {
        body {
            -webkit-print-color-adjust: exact;
        }
    }
</style>
@{
    string css1 = Url.Content("~/Content/theme/bootstrap/css/bootstrap.min.css");
}
<script type="text/javascript">
   
    var isPosttime = "@ViewBag.timess";


    $(document).ready(function (e) {

        $('#stime').datetimepicker({
            datepicker: false,
            format: 'H:i',
            step: 5
        });
        $('#etime').datetimepicker({
            datepicker: false,
            format: 'H:i',
            step: 5
        });

        if (isPosttime == "1") {
            $('#stime').val("00:01");
            $('#etime').val("23:59");
        }
    });

</script>

<style>
    select{
        width:95%;
    }
</style>

<section class="content" style="background-color: #996600; background-image: url(@Url.Content("~/Content/wood-pattern.png"));">
    <!-- Small boxes (Stat box)  -->
    <div class="row">
							<script src="~/Scripts/jquery1.8.3.print.js"></script>
<link href="~/Content/datetimepicker-master/jquery.datetimepicker.css" rel="stylesheet" />
<script src="~/Content/datetimepicker-master/jquery.datetimepicker.min.js"> </script>
<script src="~/Content/datetimepicker-master/build/jquery.datetimepicker.full.min.js"></script>
<script src="~/Content/datetimepicker-master/build/jquery.datetimepicker.full.js"></script>
<link href="~/Content/theme/plugins/datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
<script src="~/Content/theme/plugins/datepicker/bootstrap-datepicker.js" type="text/javascript"></script>

<script src="~/Scripts/custom.js"></script>
        <div class="col-md-3">


            <section class="content">
                <!-- Small boxes (Stat box) -->
                @using (Html.BeginForm("InterviewsPerUser", "Reports", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmreport" }))
                {

                    <div class="col-xs-12">
                        @Html.DropDownList("InterviewUsers", "--Candidate List--")
                    </div>
                    <div class="clearfix"></div>
                    <br />
                    <div class="col-xs-12">
                        <input class="btn btn-default" value="Get" type="submit">
                    </div>

                    <div class="clearfix"></div>

                    <br /><br /><br />

                    <a class="btn btn-app" id="btnPrint">
                        <i class="fa fa-print"></i>
                        Print This
                    </a>
                }

            </section>


        </div>

        <div class="col-md-9">

            <div id="dvContainer" class="content invoice" style=" padding: inherit; min-height: 312mm;margin:0px;width:auto; ">
                
                <style>
                    @@media print {
                        .headerrow {
                            background-color: #eee !important;
                            -webkit-print-color-adjust: exact;
                        }
                    }

                    td, th {
                        border: 1px solid black;
                    }

                    th {
                        padding: 0px;
                        font-weight: bold;
                        text-align: center;
                        border-top: 1px solid black;
                    }

                    .headerRow {
                        padding: 8px;
                        background-color: #eee !important;
                        -webkit-print-color-adjust: exact;
                    }
                </style>

                <div style="margin-bottom:50px;">

                </div>
                @Html.Raw(ViewBag.header)
                <div class="row" style="font-size:12px;text-align:center;font-weight:bold;">


                    <div style="text-align:center;font-size:30px;font-weight:bold;">Interview Schedule</div>


                    <div style="text-align:left;margin-left:40px;">

                        <div style="height:10px; margin-bottom:10px; ">

                        </div>



                        <div class="row">

                            <div class="col-xs-12">

                                <div style="width:96%;">

                                    @{
                                        if (Model != null)
                                        {
                                            <div style="margin-bottom:10px;"><span>Date of Interview:@Model.InterviewDate.ToString("dd-MMM-yyyy")</span><span style="float:right;">Time of InterView:@Model.InterviewTime.ToString("hh:mm tt")</span></div>
                                            <table class="table-responsive" width="100%" style="text-align:left;">
                                                <tr>
                                                    <td style="padding:0px;width:30%"><div class="headerRow">Interview Id</div></td>
                                                    <td style="text-align:left;">#@Model.Id</td>
                                                </tr>
                                                <tr>
                                                    <td style="padding:0px;width:30%"><div class="headerRow">Candidate Name</div></td>
                                                    <td style="text-align:left;">@Model.CandidateName</td>
                                                </tr>
                                                <tr>
                                                    <td style="padding:0px;width:30%"><div class="headerRow">Email</div></td>
                                                    <td style="text-align:left;">@Model.Email</td>
                                                </tr>
                                                <tr>
                                                    <td style="padding:0px;width:30%"><div class="headerRow">Contact No.</div></td>
                                                    <td style="text-align:left;">@Model.Mobile</td>
                                                </tr>
                                                <tr>
                                                    <td style="padding:0px;width:30%"><div class="headerRow">Address</div></td>
                                                    <td style="text-align:left;">@Model.Address</td>
                                                </tr>
                                                <tr>
                                                    <td style="padding:0px;width:30%"><div class="headerRow">Job Title Id</div></td>
                                                    <td style="text-align:left;">@Model.JobTitle_JobTitleId.Name</td>
                                                </tr>
                                                <tr>
                                                    <td style="padding:0px;width:30%"><div class="headerRow">Interview By</div></td>
                                                    <td style="text-align:left;">@ViewBag.InterviewBy</td>
                                                </tr>
                                            </table>

                                        }
                                    }
                                    @if (Model == null)
                                    {
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div style="background-color: rgba(0,0,0,0.1);">
                                                    No Candidate Choosed Yet.
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                                           </div>


                    <div class="clearfix"></div>


                </div>


                <div class="row" style="margin-top:10px;">
                    <div class="col-xs-12">
                        <br /><br />
                        @if (Model != null){<div class="col-xs-5" style="padding-left:60px;">Place of InterView:@Model.PlaceOfInterview</div>
                        <div class="col-xs-4" style="margin-left:25%;padding-left:80px;">Candidate Sign.______________ </div>}
                                                                                                                             <br/><br/>
                        <div class="col-xs-5" style="padding-left:60px;"> @DateTime.Now.ToString("dd/MMM/yyyy hh:mm:tt")</div>
                        <div class="col-xs-4" style="margin-left:25%;padding-left:80px;">Printed by: @Env.GetUserInfo("name") </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        <a class="btn btn-app" id="btnPrint">
            <i class="fa fa-print"></i>
            Print This
        </a>
    </div>
</section>
