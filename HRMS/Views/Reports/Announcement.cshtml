@model IEnumerable<HRMS.Models.AnnouncementOrNote>
@{
    ViewBag.Title = "Announcement List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    @@media print {
        body {
            -webkit-print-color-adjust: exact;
        }
    }
</style>

@{
    string css1 = Url.Content("~/Content/theme/bootstrap/css/bootstrap.min.css");
}



<section class="content" style="background-color: #996600; background-image: url(@Url.Content("~/Content/wood-pattern.png"));">
    <!-- Small boxes (Stat box)  -->
    <div class="row">
	<script src="~/Scripts/jquery1.8.3.print.js"></script>
<link href="~/Content/datetimepicker-master/jquery.datetimepicker.css" rel="stylesheet" />
<script src="~/Content/datetimepicker-master/jquery.datetimepicker.min.js"> </script>
<script src="~/Content/datetimepicker-master/build/jquery.datetimepicker.full.min.js"></script>
<script src="~/Content/datetimepicker-master/build/jquery.datetimepicker.full.js"></script>
<link href="~/Content/theme/plugins/datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
<script src="~/Content/theme/plugins/datepicker/bootstrap-datepicker.js" type="text/javascript"></script>
<script src="~/Scripts/custom.js"></script>
        <div class="col-md-3">

                <!-- Small boxes (Stat box) -->
                @using (Html.BeginForm("Announcement", "Reports", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmreport" }))
                {


                <div class="col-xs-12">
                    <input type="text" name="FromDate" required style="width: 95%;" placeholder="@ViewBag.FromDate" placeholder="From Date" id="txtCal" />
                    <script> $(function () { $("#txtCal").datepicker({ Format: 'MM-dd-yyyy' }); }); </script>

                </div>
                <div class="clearfix"></div>
                <br />
                <div class="col-xs-12">
                    <input type="text" required name="ToDate" style="width:95%;" placeholder="@ViewBag.ToDate" placeholder="To Date" id="txtCalTo" />
                    <script> $(function () { $("#txtCalTo").datepicker(); }); </script>
                </div>
                <div class="clearfix"></div>
                <br />
                <div class="col-xs-12">
                    <input class="btn btn-default" value="Get" type="submit">
                </div>

                <div class="clearfix"></div>

                <br /><br /><br />

                <a class="btn btn-app" id="btnPrint">
                    <i class="fa fa-print"></i>
                    Print This
                </a>
                }
        </div>

        <div class="col-xs-9">

            <div id="dvContainer" class="content invoice" style=" padding: inherit; min-height: 312mm;margin:0px; width:100%; ">
                <style>
                    @@media print {
                        .headerrow {
                            background-color: #eee !important;
                            -webkit-print-color-adjust: exact;
                        }
                    }

                    td, th {
                        border: 1px solid black;
                    }

                    th {
                        padding: 0px;
                        font-weight: bold;
                        border-top: 1px solid black;
                    }

                    .headerRow {
                        padding: 8px;
                        background-color: #eee !important;
                        -webkit-print-color-adjust: exact;
                    }
                </style>
                
                <div style="margin-bottom:50px;">

                </div>
                <div class="row" style="font-size:12px;text-align:center;font-weight:bold;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">

                    @Html.Raw(ViewBag.header)
                    <div style="text-align:center;font-size:30px;font-weight:bold;">Announcement List</div>
                    @Html.Raw(ViewBag.timestring)

                    <div style="text-align:left;margin-left:40px;">

                        <div style="height:10px; margin-bottom:10px; ">

                        </div>



                        <div class="row">

                            <div class="col-xs-12">

                                <div style="width:96%;">
                                    <table id="tbInvoiceItem" class="table table-striped table-bordered">
                                        <thead style="background-color:#e5e2e2;">
                                            <tr>
                                                <th style="padding:0px;"><div class="headerRow">S.No</div></th>
                                                <th style="padding:0px;"><div class="headerRow">Title</div></th>
                                                <th style="padding:0px;"><div class="headerRow">Post Date</div></th>
                                                <th style="padding:0px;"><div class="headerRow">Office</div></th>
                                                <th style="padding:0px;"><div class="headerRow">Department</div></th>
                                                <th style="padding:0px;"><div class="headerRow">Summary</div></th>
                                                <th style="padding:0px;"><div class="headerRow">Description</div></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.Count() > 0)
                                                {
                                                    foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>@item.Id</td>
                                                            <td>@item.Title</td>
                                                            <td>@item.PostedDate.ToString("dd MMM yyyy")</td>
                                                            <td>@item.Office_OfficeId.Title</td>
                                                            <td>@item.Department_DepartmentId.Name</td>
                                                            <td>@item.Summary</td>
                                                            <td>@item.Description</td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr><td colspan="7">No Record Found</td></tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr><td colspan="7">No Record Found</td></tr>
                                            }

                                        </tbody>
                                        <tfoot style="background-color:#e5e2e2;">
                                            <tr>
                                                <th colspan="9" style="padding:0px;"><div class="headerRow"><div></div></th>
                                            </tr>
                                        </tfoot>
                                    </table>


                                </div>


                            </div>


                        </div>
                        <div style="height:10px; margin-bottom:20px;">

                        </div>



                    </div>


                    <div class="clearfix"></div>


                </div>


                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-xs-5" style="padding-left:60px;"> @DateTime.Now.ToString("dd/MMM/yyyy hh:mm:tt")</div>
                        <div class="col-xs-4" style="margin-left:25%;padding-left:80px;">Printed by: @Env.GetUserInfo("name") </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        <a class="btn btn-app" id="btnPrint">
            <i class="fa fa-print"></i>
            Print This
        </a>
    </div>
</section>
