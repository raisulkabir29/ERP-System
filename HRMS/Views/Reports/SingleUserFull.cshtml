<script type="text/javascript">

    var isPosttime = "@ViewBag.timess";


    $(document).ready(function (e) {

        $('#stime').datetimepicker({
            datepicker: false,
            format: 'H:i',
            step: 5
        });
        $('#etime').datetimepicker({
            datepicker: false,
            format: 'H:i',
            step: 5
        });

        if (isPosttime == "1") {
            $('#stime').val("00:01");
            $('#etime').val("23:59");
        }
    });

</script>


