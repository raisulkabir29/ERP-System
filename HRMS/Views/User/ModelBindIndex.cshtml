@model IEnumerable<HRMS.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>User List </small>
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">User Records</h3>
                </div><!-- /.box-header -->

                <div class="box-body table-responsive">

                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    <br /><br />
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <span id="found" class="label label-info"></span>

                            <table id="tbPages" class="table table-striped table-bordered">
                                <thead>
                                    <tr>

                                        <th> User Name  </th>
                                        @*<th> Password </th>*@
                                        <th> ID Card No </th>
                                        <th> Gender  </th>
                                        <th> Date Of Birth  </th>
                                        <th> Blood Group  </th>
                                        <th> Nationality  </th>
                                        <th> First Name  </th>
                                        <th> Last Name  </th>
                                        <th> Can Login  </th>
                                        <th> Is Active  </th>
                                        <th> Profile Picture  </th>
                                        <th> Office  </th>
                                        <th> National Id  </th>
                                        <th> Date Added  </th>
                                        <th> Modified Date </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td> @Html.DisplayFor(modelItem => item.UserName) </td>
                                        @*<td> @Html.DisplayFor(modelItem => item.Password) </td>*@
                                        <td> @Html.DisplayFor(modelItem => item.CustomId) </td>
                                        <td> @Html.DisplayFor(modelItem => item.Gender_GenderId.Title) </td>
                                        <td> @Html.DisplayFor(modelItem => item.DateOfBirth) </td>
                                        <td> @Html.DisplayFor(modelItem => item.BloodGroup) </td>
                                        <td> @Html.DisplayFor(modelItem => item.Nationality) </td>
                                        <td> @Html.DisplayFor(modelItem => item.FirstName) </td>
                                        <td> @Html.DisplayFor(modelItem => item.LastName) </td>
                                        <td> @Html.DisplayFor(modelItem => item.CanLogin) </td>
                                        <td> @Html.DisplayFor(modelItem => item.IsActive) </td>
                                        <td> @Html.DisplayFor(modelItem => item.ProfilePicture) </td>
                                        <td> @Html.DisplayFor(modelItem => item.Office_OfficeId.Title) </td>
                                        <td> @Html.DisplayFor(modelItem => item.NationalId) </td>
                                        <td> @Html.DisplayFor(modelItem => item.DateAdded) </td>
                                        <td> @Html.DisplayFor(modelItem => item.ModifiedDate) </td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="box-footer">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</section>