@model HRMS.Models.User

@{
    ViewBag.Title = "Are you sure you want to delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}


@Html.StarkAjaxFormSubmiter("frmUser", "tbUser", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                <small>@ViewBag.Title</small>
            </h1>
        </section>
    }
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of User</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>UserName</td>
                                    <td>@Html.DisplayFor(model => model.UserName)</td>
                                </tr>
                                <tr>
                                    <td>Password</td>
                                    <td>@Html.DisplayFor(model => model.Password)</td>
                                </tr>
                                <tr>
                                    <td>ID Card No</td>
                                    <td>@Html.DisplayFor(model => model.CustomId)</td>
                                </tr>
                                <tr>
                                    <td>GenderId</td>
                                    <td>@Html.DisplayFor(model => model.GenderId)</td>
                                </tr>
                                <tr>
                                    <td>DateOfBirth</td>
                                    <td>@Html.DisplayFor(model => model.DateOfBirth)</td>
                                </tr>
                                <tr>
                                    <td>BloodGroup</td>
                                    <td>@Html.DisplayFor(model => model.BloodGroup)</td>
                                </tr>
                                <tr>
                                    <td>Nationality</td>
                                    <td>@Html.DisplayFor(model => model.Nationality)</td>
                                </tr>
                                <tr>
                                    <td>FirstName</td>
                                    <td>@Html.DisplayFor(model => model.FirstName)</td>
                                </tr>
                                <tr>
                                    <td>LastName</td>
                                    <td>@Html.DisplayFor(model => model.LastName)</td>
                                </tr>
                                <tr>
                                    <td>CanLogin</td>
                                    <td>@Html.DisplayFor(model => model.CanLogin)</td>
                                </tr>
                                <tr>
                                    <td>IsActive</td>
                                    <td>@Html.DisplayFor(model => model.IsActive)</td>
                                </tr>
                                <tr>
                                    <td> &nbsp;</td>
                                    <td> <img src="~/Uploads/@Model.ProfilePicture" width="200" /> </td>
                                </tr>
                                <tr>
                                    <td>OfficeId</td>
                                    <td>@Html.DisplayFor(model => model.OfficeId)</td>
                                </tr>
                                <tr>
                                    <td>NationalId</td>
                                    <td>@Html.DisplayFor(model => model.NationalId)</td>
                                </tr>

                            </table>
                            <div class="box-footer">

                                @using (Html.BeginForm("Delete", "User", FormMethod.Post, new { id = "frmUser" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.StarkInputButtion("Delete", "submit", "btn btn-danger", "")
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary", @style = "margin-left:5px;" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>