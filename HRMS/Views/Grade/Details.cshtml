@model HRMS.Models.Grade

@{
    ViewBag.Title = "Details";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}
<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>Details</small>*@
    </h1>
</section>
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of Grade</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>Id</td>
                                    <td>@Html.DisplayFor(model => model.Id)</td>
                                </tr>
                                <tr>
                                    <td>OT/NOT</td>
                                    <td>@Html.DisplayFor(model => model.OTNOT)</td>
                                </tr>
                                <tr>
                                    <td>Tofsil</td>
                                    <td>@Html.DisplayFor(model => model.Tofsil)</td>
                                </tr>
                                <tr>
                                    <td>Tofsil BN</td>
                                    <td>@Html.DisplayFor(model => model.TofsilBN)</td>
                                </tr>
                                <tr>
                                    <td>Grade No</td>
                                    <td>@Html.DisplayFor(model => model.GradeNo)</td>
                                </tr>
                                <tr>
                                    <td>Grade No BN</td>
                                    <td>@Html.DisplayFor(model => model.GradeNoBN)</td>
                                </tr>
                                <tr>
                                    <td>Tofsil w Grade No</td>
                                    <td>@Html.DisplayFor(model => model.TofsilWGradeNo)</td>
                                </tr>
                                <tr>
                                    <td>Gross Salary</td>
                                    <td>@Html.DisplayFor(model => model.GrossSalary)</td>
                                </tr>
                                <tr>
                                    <td>Basic Salary</td>
                                    <td>@Html.DisplayFor(model => model.BasicSalary)</td>
                                </tr>
                                <tr>
                                    <td>Overtime Rate</td>
                                    <td>@Html.DisplayFor(model => model.OvertimeRate)</td>
                                </tr>
                                <tr>
                                    <td>DateAdded</td>
                                    <td>@Html.DisplayFor(model => model.DateAdded)</td>
                                </tr>
                                <tr>
                                    <td>ModifiedDate</td>
                                    <td>@Html.DisplayFor(model => model.ModifiedDate)</td>
                                </tr>

                            </table>
                            <div class="box-footer">
                                @Ajax.ModalDialogActionLink("Edit", "Edit/" + Model.Id, "Edit", "btn btn-primary")

                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>