@model IEnumerable<HRMS.Models.Grade>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>Gender List </small>*@
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">User Records</h3>
                </div><!-- /.box-header -->

                <div class="box-body table-responsive">

                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    <br /><br />
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <span id="found" class="label label-info"></span>

                            <table id="tbPages" class="table table-striped table-bordered">
                                <thead>
                                    <tr>

                                        @*<th> Id  </th>*@
                                        <th> OT/NOT  </th>
                                        <th> Tofsil  </th>
                                        <th> Grade No  </th>
                                        <th> Tofsil w Grade No  </th>
                                        <th> Gross Salary  </th>
                                        <th> Basic Salary  </th>
                                        <th> Overtime Rate  </th>
                                        <th> DateAdded  </th>
                                        <th> ModifiedDate  </th>


                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td> @Html.DisplayFor(modelItem => item.Id) </td>
                                        <td> @Html.DisplayFor(modelItem => item.OTNOT) </td>
                                        <td> @Html.DisplayFor(modelItem => item.Tofsil) </td>
                                        <td> @Html.DisplayFor(modelItem => item.TofsilBN) </td>
                                        <td> @Html.DisplayFor(modelItem => item.GradeNo) </td>
                                        <td> @Html.DisplayFor(modelItem => item.GradeNoBN) </td>
                                        <td> @Html.DisplayFor(modelItem => item.TofsilWGradeNo) </td>
                                        <td> @Html.DisplayFor(modelItem => item.GrossSalary) </td>
                                        <td> @Html.DisplayFor(modelItem => item.BasicSalary) </td>
                                        <td> @Html.DisplayFor(modelItem => item.OvertimeRate) </td>
                                        <td> @Html.DisplayFor(modelItem => item.DateAdded) </td>
                                        <td> @Html.DisplayFor(modelItem => item.ModifiedDate) </td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="box-footer">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</section>