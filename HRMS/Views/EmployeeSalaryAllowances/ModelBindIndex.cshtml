@model IEnumerable<HRMS.Models.EmployeeSalaryAllowances>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>User Overtime List </small>*@
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Employee Salary Allowances</h3>
                </div><!-- /.box-header -->

                <div class="box-body table-responsive">

                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    <br /><br />
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <span id="found" class="label label-info"></span>

                            <table id="tbPages" class="table table-striped table-bordered">
                                <thead>
                                    <tr>

                                        <th> Id  </th>
                                        <th> User  </th>
                                        <th> Year  </th>
                                        <th> Month  </th>
                                        <th> OT/NOT  </th>
                                        <th> Gross  </th>
                                        @*<th> House Rent Allowance OT  </th>
                                        <th> House Rent Allowance NOT </th>
                                        <th> Medical Allowance OT  </th>
                                        <th> Medical Allowance NOT  </th>
                                        <th> Conveyance Allowance OT  </th>
                                        <th> Conveyance Allowance NOT  </th>
                                        <th> Food Allowance OT  </th>
                                        <th> Food Allowance NOT  </th>
                                        <th> Performance Allowance OT  </th>
                                        <th> Performance Allowance NOT </th>
                                        <th> Attendance Bonus OT  </th>
                                        <th> Attendance Bonus NOT  </th>
                                        <th> Basic OT  </th>
                                        <th> Basic NOT  </th>*@
                                        <th> Basic  </th>
                                        <th> House Rent Allowance  </th>
                                        <th> Medical Allowance  </th>
                                        <th> Conveyance Allowance </th>
                                        <th> Food Allowance  </th>
                                        <th> Performance Allowance  </th>
                                        <th> Attendance Bonus  </th>
                                        <th> Salary Payable Date  </th>
                                        <th> Remarks  </th>
                                        <th> Date Added  </th>
                                        <th> Modified Date  </th>


                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td> @Html.DisplayFor(modelItem => item.Id) </td>
                                            <td> @Html.DisplayFor(modelItem => item.User_UserId.UserName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Year) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Month) </td>
                                            <td> @Html.DisplayFor(modelItem => item.OTNOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Gross) </td>
                                            <td> @Html.DisplayFor(modelItem => item.HRAllowanceOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.HRAllowanceNOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.MedAllowanceOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.MedAllowanceNOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ConAllowanceOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ConAllowanceNOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.FoodAllowanceOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.FoodAllowanceNOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.PerAllowanceOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.PerAllowanceNOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.AttendBonOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.AttendBonNOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.BasicOT) </td>
                                            <td> @Html.DisplayFor(modelItem => item.BasicNOT</td>
                                            <td> @Html.DisplayFor(modelItem => item.Basic) </td>
                                            <td> @Html.DisplayFor(modelItem => item.HouseRentAllowance) </td>
                                            <td> @Html.DisplayFor(modelItem => item.MedicalAllowance) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ConveyanceAllowance) </td>
                                            <td> @Html.DisplayFor(modelItem => item.FoodAllowance) </td>
                                            <td> @Html.DisplayFor(modelItem => item.PerformanceAllowance) </td>
                                            <td> @Html.DisplayFor(modelItem => item.AttendanceBonus) </td>
                                            <td> @Html.DisplayFor(modelItem => item.SalaryPayableDate) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Remarks) </td>
                                            <td> @Html.DisplayFor(modelItem => item.DateAdded) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ModifiedDate) </td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="box-footer">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</section>

