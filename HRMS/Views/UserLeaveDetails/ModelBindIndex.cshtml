@model IEnumerable<HRMS.Models.UserLeaveDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>RoleUser List </small>*@
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">User Records</h3>
                </div><!-- /.box-header -->

                <div class="box-body table-responsive">

                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    <br /><br />
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <span id="found" class="label label-info"></span>

                            <table id="tbPages" class="table table-striped table-bordered">
                                <thead>
                                    <tr>

                                        <th> Id  </th>
                                        <th> User  </th>
                                        <th> Leave Type  </th>
                                        <th> Leave Status  </th>
                                        <th> Year  </th>
                                        <th> Month  </th>
                                        <th> Total Used Leaves in Month  </th>
                                        <th> Total Used Leaves Per Year  </th>
                                        <th> Total Remaining Leaves Per Year  </th>


                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td> @Html.DisplayFor(modelItem => item.Id) </td>
                                            <td> @Html.DisplayFor(modelItem => item.User_UserId.UserName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.LeaveType_LeaveTypeId.Name) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ApplicationStatus_LeaveStatusId.Name) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Year) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Month) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TotUsedLeavesInMonth) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TotUsedLeavesPerYear) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TotRemainingLeavesPerYear) </td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="box-footer">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</section>