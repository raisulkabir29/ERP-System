@model HRMS.Models.UserLeaveApplication

@{
    ViewBag.Title = "Are you sure you want to delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}


@Html.StarkAjaxFormSubmiter("frmEmployeeLeaveApplication", "tbEmployeeLeaveApplication", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                @*<small>@ViewBag.Title</small>*@
            </h1>
        </section>
    }
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of Employee Leave Application</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>UserId</td>
                                    <td>@Html.DisplayFor(model => model.UserId)</td>
                                </tr>
                                <tr>
                                    <td>LeaveTypeId</td>
                                    <td>@Html.DisplayFor(model => model.LeaveTypeId)</td>
                                </tr>
                                <tr>
                                    <td>LeaveActiveFrom</td>
                                    <td>@Html.DisplayFor(model => model.LeaveActiveFrom)</td>
                                </tr>
                                <tr>
                                    <td>LeaveActiveTo</td>
                                    <td>@Html.DisplayFor(model => model.LeaveActiveTo)</td>
                                </tr>
                                <tr>
                                    <td>DateAdded</td>
                                    <td>@Html.DisplayFor(model => model.DateAdded)</td>
                                </tr>
                                <tr>
                                    <td>Year</td>
                                    <td>@Html.DisplayFor(model => model.Year)</td>
                                </tr>
                                <tr>
                                    <td>Month</td>
                                    <td>@Html.DisplayFor(model => model.Month)</td>
                                </tr>
                                <tr>
                                    <td>Application Date</td>
                                    <td>@Html.DisplayFor(model => model.ApplicationDate)</td>
                                </tr>
                                <tr>
                                    <td>No Of Days</td>
                                    <td>@Html.DisplayFor(model => model.NoOfDays)</td>
                                </tr>
                                <tr>
                                    <td>Leave Purpose</td>
                                    <td>@Html.DisplayFor(model => model.LeavePurpose)</td>
                                </tr>
                                <tr>
                                    <td>Application Status</td>
                                    <td>@Html.DisplayFor(model => model.ApplicationStatusId)</td>
                                </tr>


                            </table>
                            <div class="box-footer">

                                @using (Html.BeginForm("Delete", "EmployeeLeaveApplication", FormMethod.Post, new { id = "frmEmployeeLeaveApplication" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.StarkInputButtion("Delete", "submit", "btn btn-danger", "")
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary", @style = "margin-left:5px;" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>