@model IEnumerable<HRMS.Models.UserLoanApplication>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>User List </small>*@
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Employee Loan Application Records</h3>
                </div><!-- /.box-header -->

                <div class="box-body table-responsive">

                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    <br /><br />
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <span id="found" class="label label-info"></span>

                            <table id="tbPages" class="table table-striped table-bordered">
                                <thead>
                                    <tr>

                                        <th> Id  </th>
                                        <th> User  </th>
                                        <th> Loan Type  </th>
                                        <th> Loan Status  </th>
                                        <th> Application Date  </th>
                                        <th> Possible Disburse Date  </th>
                                        <th> Max Amount Allowed  </th>
                                        <th> Loan Amount Applied  </th>
                                        <th> No Of Installment  </th>
                                        <th> Installment Amount  </th>
                                        <th> Description </th>
                                        <th> Added By  </th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td> @Html.DisplayFor(modelItem => item.Id) </td>
                                            <td> @Html.DisplayFor(modelItem => item.User_UserId.UserName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.LoanType_LoanTypeId.Name) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ApplicationStatus_LoanStatusId.Name) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ApplicationDate) </td>
                                            <td> @Html.DisplayFor(modelItem => item.PossibleDisburseDate) </td>
                                            <td> @Html.DisplayFor(modelItem => item.MaxAmountAllowed) </td>
                                            <td> @Html.DisplayFor(modelItem => item.LoanAmountApplied) </td>
                                            <td> @Html.DisplayFor(modelItem => item.NoOfInstallment) </td>
                                            <td> @Html.DisplayFor(modelItem => item.InstallmentAmount) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Description) </td>
                                            <td> @Html.DisplayFor(modelItem => item.AddedBy) </td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="box-footer">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</section>