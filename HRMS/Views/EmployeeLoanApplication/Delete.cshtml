@model HRMS.Models.UserLoanApplication

@{
    ViewBag.Title = "Are you sure you want to delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}


@Html.StarkAjaxFormSubmiter("frmEmployeeLoanApplication", "tbEmployeeLoanApplication", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                @*<small>@ViewBag.Title</small>*@
            </h1>
        </section>
    }
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of Employee Loan Application</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>UserId</td>
                                    <td>@Html.DisplayFor(model => model.UserId)</td>
                                </tr>
                                <tr>
                                    <td>LoanTypeId</td>
                                    <td>@Html.DisplayFor(model => model.LoanTypeId)</td>
                                </tr>
                                <tr>
                                    <td>LoanStatusId</td>
                                    <td>@Html.DisplayFor(model => model.LoanStatusId)</td>
                                </tr>
                                <tr>
                                    <td>ApplicationDate</td>
                                    <td>@Html.DisplayFor(model => model.ApplicationDate)</td>
                                </tr>
                                <tr>
                                    <td>PossibleDisburseDate</td>
                                    <td>@Html.DisplayFor(model => model.PossibleDisburseDate)</td>
                                </tr>
                                <tr>
                                    <td>MaxAmountAllowed</td>
                                    <td>@Html.DisplayFor(model => model.MaxAmountAllowed)</td>
                                </tr>
                                <tr>
                                    <td>LoanAmountApplied</td>
                                    <td>@Html.DisplayFor(model => model.LoanAmountApplied)</td>
                                </tr>
                                <tr>
                                    <td>NoOfInstallment</td>
                                    <td>@Html.DisplayFor(model => model.NoOfInstallment)</td>
                                </tr>
                                <tr>
                                    <td>InstallmentAmount</td>
                                    <td>@Html.DisplayFor(model => model.InstallmentAmount)</td>
                                </tr>
                                <tr>
                                    <td>Description</td>
                                    <td>@Html.DisplayFor(model => model.Description)</td>
                                </tr>
                                <tr>
                                    <td>AddedBy</td>
                                    <td>@Html.DisplayFor(model => model.AddedBy)</td>
                                </tr>


                            </table>
                            <div class="box-footer">

                                @using (Html.BeginForm("Delete", "EmployeeLoanApplication", FormMethod.Post, new { id = "frmEmployeeLoanApplication" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.StarkInputButtion("Delete", "submit", "btn btn-danger", "")
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary", @style = "margin-left:5px;" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>