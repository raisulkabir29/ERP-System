@model HRMS.Models.Office

@{
    ViewBag.Title = "Are you sure you want to delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}


@Html.StarkAjaxFormSubmiter("frmOffice", "tbOffice", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                @*<small>@ViewBag.Title</small>*@
            </h1>
        </section>
    }
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of Office</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>Title</td>
                                    <td>@Html.DisplayFor(model => model.Title)</td>
                                </tr>
                                <tr>
                                    <td>Code</td>
                                    <td>@Html.DisplayFor(model => model.Code)</td>
                                </tr>
                                <tr>
                                    <td>CreatedOn</td>
                                    <td>@Html.DisplayFor(model => model.CreatedOn)</td>
                                </tr>
                                <tr>
                                    <td>OfficeTypeId</td>
                                    <td>@Html.DisplayFor(model => model.OfficeTypeId)</td>
                                </tr>
                                <tr>
                                    <td>CompanyId</td>
                                    <td>@Html.DisplayFor(model => model.CompanyId)</td>
                                </tr>
                                @*<tr>
                                    <td>MapLatitude</td>
                                    <td>@Html.DisplayFor(model => model.MapLatitude)</td>
                                </tr>
                                <tr>
                                    <td>MapLongitude</td>
                                    <td>@Html.DisplayFor(model => model.MapLongitude)</td>
                                </tr>*@
                                <tr>
                                    <td>Details</td>
                                    <td>@Html.DisplayFor(model => model.Details)</td>
                                </tr>
                                <tr>
                                    <td>Fax</td>
                                    <td>@Html.DisplayFor(model => model.Fax)</td>
                                </tr>
                                <tr>
                                    <td>Country</td>
                                    <td>@Html.DisplayFor(model => model.Country)</td>
                                </tr>
                                <tr>
                                    <td>City</td>
                                    <td>@Html.DisplayFor(model => model.City)</td>
                                </tr>
                                <tr>
                                    <td>ZipCode</td>
                                    <td>@Html.DisplayFor(model => model.ZipCode)</td>
                                </tr>
                                <tr>
                                    <td>DateAdded</td>
                                    <td>@Html.DisplayFor(model => model.DateAdded)</td>
                                </tr>
                                <tr>
                                    <td>ModifiedDate</td>
                                    <td>@Html.DisplayFor(model => model.ModifiedDate)</td>
                                </tr>


                            </table>
                            <div class="box-footer">

                                @using (Html.BeginForm("Delete", "Office", FormMethod.Post, new { id = "frmOffice" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.StarkInputButtion("Delete", "submit", "btn btn-danger", "")
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary", @style = "margin-left:5px;" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>