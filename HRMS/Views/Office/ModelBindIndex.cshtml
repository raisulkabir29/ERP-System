@model IEnumerable<HRMS.Models.Office>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>Office List </small>*@
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">User Records</h3>
                </div><!-- /.box-header -->

                <div class="box-body table-responsive">

                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    <br /><br />
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <span id="found" class="label label-info"></span>

                            <table id="tbPages" class="table table-striped table-bordered">
                                <thead>
                                    <tr>

                                        @*<th> Id  </th>*@
                                        <th> Title  </th>
                                        <th> Code  </th>
                                        <th> Created On  </th>
                                        <th> Office Type  </th>
                                        <th> Company  </th>
                                        @*<th> Map Latitude  </th>
                                        <th> Map Longitude  </th>*@
                                        <th> Details  </th>
                                        <th> Fax  </th>
                                        <th> Country  </th>
                                        <th> City  </th>
                                        <th> Zip Code  </th>
                                        <th> DateAdded  </th>
                                        <th> ModifiedDate  </th>


                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            @*<td> @Html.DisplayFor(modelItem => item.Id) </td>*@
                                            <td> @Html.DisplayFor(modelItem => item.Title) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Code) </td>
                                            <td> @Html.DisplayFor(modelItem => item.CreatedOn) </td>
                                            <td> @Html.DisplayFor(modelItem => item.OfficeType_OfficeTypeId.Name) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Company_CompanyId.Name) </td>
                                            @*<td> @Html.DisplayFor(modelItem => item.MapLatitude) </td>
                                            <td> @Html.DisplayFor(modelItem => item.MapLongitude) </td>*@
                                            <td> @Html.DisplayFor(modelItem => item.Details) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Fax) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Country) </td>
                                            <td> @Html.DisplayFor(modelItem => item.City) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ZipCode) </td>
                                            <td> @Html.DisplayFor(modelItem => item.DateAdded) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ModifiedDate) </td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="box-footer">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</section>