@model HRMS.Models.UserWorkExperience

@{
    ViewBag.Title = "Details";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}
<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>Details</small>*@
    </h1>
</section>
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of UserWorkExperience</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>User ID</td>
                                    <td>@Html.DisplayFor(model => model.User_UserId.UserName)</td>
                                </tr>
                                <tr>
                                    <td>Company Name</td>
                                    <td>@Html.DisplayFor(model => model.CompanyName)</td>
                                </tr>
                                <tr>
                                    <td>Position</td>
                                    <td>@Html.DisplayFor(model => model.Position)</td>
                                </tr>
                                <tr>
                                    <td>FromDate</td>
                                    <td>@Html.DisplayFor(model => model.FromDate)</td>
                                </tr>
                                <tr>
                                    <td>ToDate</td>
                                    <td>@Html.DisplayFor(model => model.ToDate)</td>
                                </tr>
                                <tr>
                                    <td>IsCurrent</td>
                                    <td>@Html.DisplayFor(model => model.IsCurrent)</td>
                                </tr>
                                <tr>
                                    <td>Describe Job</td>
                                    <td>@Html.DisplayFor(model => model.DescribeJob)</td>
                                </tr>
                                <tr>
                                    <td>Last Salary</td>
                                    <td>@Html.DisplayFor(model => model.LastSalary)</td>
                                </tr>
                                <tr>
                                    <td>Job Duration</td>
                                    <td>@Html.DisplayFor(model => model.JobDuration)</td>
                                </tr>
                                <tr>
                                    <td>Reason For Leave</td>
                                    <td>@Html.DisplayFor(model => model.ReasonForLeave)</td>
                                </tr>
                                <tr>
                                    <td>Date Added</td>
                                    <td>@Html.DisplayFor(model => model.DateAdded)</td>
                                </tr>
                                <tr>
                                    <td>Modified Date</td>
                                    <td>@Html.DisplayFor(model => model.ModifiedDate)</td>
                                </tr>
                            </table>
                            <div class="box-footer">
                                @Ajax.ModalDialogActionLink("Edit", "Edit/" + Model.Id, "Edit", "btn btn-primary")

                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>