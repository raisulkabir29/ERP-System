@model HRMS.Models.UserWorkExperience

@{
    ViewBag.Title = "Are you sure you want to delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}


@Html.StarkAjaxFormSubmiter("frmUserWorkExperience", "tbUserWorkExperience", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                @*<small>@ViewBag.Title</small>*@
            </h1>
        </section>
    }
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of UserWorkExperience</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>UserId</td>
                                    <td>@Html.DisplayFor(model => model.User_UserId.UserName)</td>
                                </tr>
                                <tr>
                                    <td>CompanyName</td>
                                    <td>@Html.DisplayFor(model => model.CompanyName)</td>
                                </tr>
                                <tr>
                                    <td>Position</td>
                                    <td>@Html.DisplayFor(model => model.Position)</td>
                                </tr>
                                <tr>
                                    <td>FromDate</td>
                                    <td>@Html.DisplayFor(model => model.FromDate)</td>
                                </tr>
                                <tr>
                                    <td>ToDate</td>
                                    <td>@Html.DisplayFor(model => model.ToDate)</td>
