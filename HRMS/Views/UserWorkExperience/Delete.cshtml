                                    <td>@Html.DisplayFor(model => model.ReasonForLeave)</td>
                                </tr>

                            </table>
                            <div class="box-footer">

                                @using (Html.BeginForm("Delete", "UserWorkExperience", FormMethod.Post, new { id = "frmUserWorkExperience" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.StarkInputButtion("Delete", "submit", "btn btn-danger", "")
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary", @style = "margin-left:5px;" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>