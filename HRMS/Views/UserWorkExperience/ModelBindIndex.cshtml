@model IEnumerable<HRMS.Models.UserWorkExperience>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>UserWorkExperience List </small>*@
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">User Records</h3>
                </div><!-- /.box-header -->

                <div class="box-body table-responsive">

                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    <br /><br />
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <span id="found" class="label label-info"></span>

                            <table id="tbPages" class="table table-striped table-bordered">
                                <thead>
                                    <tr>

                                        @*<th> Id  </th>*@
                                        <th> User  </th>
                                        <th> Company Name  </th>
                                        <th> Position  </th>
                                        <th> From Date  </th>
                                        <th> To Date  </th>
                                        <th> Is Current  </th>
                                        <th> Describe Job  </th>
                                        <th> Last Salary </th>
                                        <th> Job Duration </th>
                                        <th> Reason For Leave </th>
                                        <th> Date Added </th>
                                        <th> Modified Date </th>

                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        @*<td> @Html.DisplayFor(modelItem => item.Id) </td>*@
                                        <td> @Html.DisplayFor(modelItem => item.User_UserId.UserName) </td>
                                        <td> @Html.DisplayFor(modelItem => item.CompanyName) </td>
                                        <td> @Html.DisplayFor(modelItem => item.Position) </td>
                                        <td> @Html.DisplayFor(modelItem => item.FromDate) </td>
                                        <td> @Html.DisplayFor(modelItem => item.ToDate) </td>
                                        <td> @Html.DisplayFor(modelItem => item.IsCurrent) </td>
                                        <td> @Html.DisplayFor(modelItem => item.DescribeJob) </td>
                                        <td> @Html.DisplayFor(modelItem => item.LastSalary) </td>
                                        <td> @Html.DisplayFor(modelItem => item.JobDuration) </td>
                                        <td> @Html.DisplayFor(modelItem => item.ReasonForLeave) </td>
                                        <td> @Html.DisplayFor(modelItem => item.DateAdded) </td>
                                        <td> @Html.DisplayFor(modelItem => item.ModifiedDate)</td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="box-footer">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</section>