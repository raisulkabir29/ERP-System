@model IEnumerable<HRMS.Models.UserPrAbsDetails>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>UserLeaveApplication List </small>*@
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">User Records</h3>
                </div><!-- /.box-header -->

                <div class="box-body table-responsive">

                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    <br /><br />
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <span id="found" class="label label-info"></span>

                            <table id="tbPages" class="table table-striped table-bordered">
                                <thead>
                                    <tr>

                                        <th> Id  </th>
                                        <th> User  </th>
                                        <th> Year  </th>
                                        <th> Month  </th>
                                        <th> CalenderDay  </th>
                                        <th> Total HoliDays  </th>
                                        <th> Total Working Days  </th>
                                        <th> Absent Day Before Joining  </th>
                                        <th> Absent Day Before Joining Amount </th>
                                        <th> Absent Day After Joining </th>
                                        <th> Absent Day After Joining Amount </th>
                                        <th> Leave Without Pay </th>
                                        <th> Leave Without Pay Amount </th>
                                        <th> Total Absent Days </th>
                                        <th> Total Casual Leaves </th>
                                        <th> Total Sick Leaves </th>
                                        <th> Total Earned Leaves </th>
                                        <th> Total Present Days </th>
                                        <th> Total Payable Days </th>


                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td> @Html.DisplayFor(modelItem => item.Id) </td>
                                            <td> @Html.DisplayFor(modelItem => item.User_UserId.UserName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Year) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Month) </td>
                                            <td> @Html.DisplayFor(modelItem => item.CalenderDay) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TotalHoliDays) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TotalWorkingDays) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ADBJ) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ADBJAmount) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ADAJ) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ADAJAmount) </td>
                                            <td> @Html.DisplayFor(modelItem => item.LWP) </td>
                                            <td> @Html.DisplayFor(modelItem => item.LWPAmount) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TotalAbsentDays) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TotalCasualLeaves) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TotalSickLeaves) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TotalEarnedLeaves) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TotalPresentDays) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TotalPayableDays) </td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="box-footer">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</section>