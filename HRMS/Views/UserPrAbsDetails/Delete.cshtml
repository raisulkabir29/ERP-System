@model HRMS.Models.UserPrAbsDetails

@{
    ViewBag.Title = "Are you sure you want to delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}


@Html.StarkAjaxFormSubmiter("frmUserPrAbsDetails", "tbUserPrAbsDetails", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                @*<small>@ViewBag.Title</small>*@
            </h1>
        </section>
    }
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of User Present Absent Details</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>UserId</td>
                                    <td>@Html.DisplayFor(model => model.UserId)</td>
                                </tr>
                                <tr>
                                    <td>Year</td>
                                    <td>@Html.DisplayFor(model => model.Year)</td>
                                </tr>
                                <tr>
                                    <td>Month</td>
                                    <td>@Html.DisplayFor(model => model.Month)</td>
                                </tr>
                                <tr>
                                    <td>CalenderDay</td>
                                    <td>@Html.DisplayFor(model => model.CalenderDay)</td>
                                </tr>
                                <tr>
                                    <td>Total HoliDays</td>
                                    <td>@Html.DisplayFor(model => model.TotalHoliDays)</td>
                                </tr>
                                <tr>
                                    <td>Total WorkingDays</td>
                                    <td>@Html.DisplayFor(model => model.TotalWorkingDays)</td>
                                </tr>
                                <tr>
                                    <td>Absent Day Before Joining</td>
                                    <td>@Html.DisplayFor(model => model.ADBJ)</td>
                                </tr>
                                <tr>
                                    <td>Absent Day Before Joining Amount</td>
                                    <td>@Html.DisplayFor(model => model.ADBJAmount)</td>
                                </tr>
                                <tr>
                                    <td>Absent Day After Joining</td>
                                    <td>@Html.DisplayFor(model => model.ADAJ)</td>
                                </tr>
                                <tr>
                                    <td>Absent Day After Joining Amount</td>
                                    <td>@Html.DisplayFor(model => model.ADAJAmount)</td>
                                </tr>
                                <tr>
                                    <td>Leave Without Pay</td>
                                    <td>@Html.DisplayFor(model => model.LWP)</td>
                                </tr>
                                <tr>
                                    <td>Leave Without Pay Amount</td>
                                    <td>@Html.DisplayFor(model => model.LWPAmount)</td>
                                </tr>
                                <tr>
                                    <td>Total Absent Days</td>
                                    <td>@Html.DisplayFor(model => model.TotalAbsentDays)</td>
                                </tr>
                                <tr>
                                    <td>Total Casual Leaves</td>
                                    <td>@Html.DisplayFor(model => model.TotalCasualLeaves)</td>
                                </tr>
                                <tr>
                                    <td>Total Sick Leaves</td>
                                    <td>@Html.DisplayFor(model => model.TotalSickLeaves)</td>
                                </tr>
                                <tr>
                                    <td>Total Earned Leaves</td>
                                    <td>@Html.DisplayFor(model => model.TotalEarnedLeaves)</td>
                                </tr>
                                <tr>
                                    <td>Total Present Days</td>
                                    <td>@Html.DisplayFor(model => model.TotalPresentDays)</td>
                                </tr>
                                <tr>
                                    <td>Total Payable Days</td>
                                    <td>@Html.DisplayFor(model => model.TotalPayableDays)</td>
                                </tr>


                            </table>
                            <div class="box-footer">

                                @using (Html.BeginForm("Delete", "UserPrAbsDetails", FormMethod.Post, new { id = "frmUserPrAbsDetails" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.StarkInputButtion("Delete", "submit", "btn btn-danger", "")
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary", @style = "margin-left:5px;" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>