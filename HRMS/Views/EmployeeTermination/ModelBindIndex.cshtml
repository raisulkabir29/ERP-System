@model IEnumerable<HRMS.Models.EmployeeTermination>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>User Overtime List </small>*@
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Employee Termination</h3>
                </div><!-- /.box-header -->

                <div class="box-body table-responsive">

                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                    <br /><br />
                    <div class="widget-sec">
                        <div class="streaming-table">
                            <span id="found" class="label label-info"></span>

                            <table id="tbPages" class="table table-striped table-bordered">
                                <thead>
                                    <tr>

                                        @*<th> Id  </th>*@
                                        <th> Termination Name  </th>
                                        <th> Department Name </th>
                                        <th> Section Name</th>
                                        <th> User Name </th>
                                        <th> ID card No  </th>
                                        <th> Occurance Date  </th>
                                        <th> Detection Date </th>
                                        <th> Showcause Date  </th>
                                        <th> Description  </th>
                                        <th> Reply Day  </th>
                                        <th> Notification Day  </th>
                                        <th> Termination Date  </th>
                                        <th> Year  </th>
                                        <th> Month  </th>
                                        <th> Is Payable  </th>
                                        <th> Payable Amount  </th>
                                        <th> Date Added  </th>
                                        <th> Modified Date  </th>


                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            @*<td> @Html.DisplayFor(modelItem => item.Id) </td>*@
                                            <td> @Html.DisplayFor(modelItem => item.TerminationType_TerminationId.Name) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Department_DepartmentId.Name) </td>
                                            <td> @Html.DisplayFor(modelItem => item.SectionId) </td>
                                            <td> @Html.DisplayFor(modelItem => item.User_UserId.UserName) </td>
                                            <td> @Html.DisplayFor(modelItem => item.User_UserId.CustomId) </td>
                                            <td> @Html.DisplayFor(modelItem => item.OccuranceDate) </td>
                                            <td> @Html.DisplayFor(modelItem => item.DetectionDate) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ShowcauseDate) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Description) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ReplyDay) </td>
                                            <td> @Html.DisplayFor(modelItem => item.NotificationDay) </td>
                                            <td> @Html.DisplayFor(modelItem => item.TerminationDate) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Year) </td>
                                            <td> @Html.DisplayFor(modelItem => item.Month) </td>
                                            <td> @Html.DisplayFor(modelItem => item.IsPayable) </td>
                                            <td> @Html.DisplayFor(modelItem => item.PayableAmount) </td>
                                            <td> @Html.DisplayFor(modelItem => item.DateAdded) </td>
                                            <td> @Html.DisplayFor(modelItem => item.ModifiedDate) </td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="box-footer">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    </div>
</section>