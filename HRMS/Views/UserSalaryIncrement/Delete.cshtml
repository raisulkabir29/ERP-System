@model HRMS.Models.UserSalaryIncrement

@{
    ViewBag.Title = "Are you sure you want to delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}


@Html.StarkAjaxFormSubmiter("frmUserSalaryIncrement", "tbUserSalaryIncrement", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                @*<small>@ViewBag.Title</small>*@
            </h1>
        </section>
    }
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of User Salary Increment</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>UserId</td>
                                    <td>@Html.DisplayFor(model => model.User_UserId.UserName)</td>
                                </tr>
                                <tr>
                                    <td>OTNOT</td>
                                    <td>@Html.DisplayFor(model => model.OTNOT)</td>
                                </tr>
                                <tr>
                                    <td>Gross Salary</td>
                                    <td>@Html.DisplayFor(model => model.GrossSalary)</td>
                                </tr>
                                <tr>
                                    <td>Basic Salary</td>
                                    <td>@Html.DisplayFor(model => model.BasicSalary)</td>
                                </tr>
                                <tr>
                                    <td>Increment Percentage</td>
                                    <td>@Html.DisplayFor(model => model.IncrementPercentage)</td>
                                </tr>
                                <tr>
                                    <td>Year of Increment</td>
                                    <td>@Html.DisplayFor(model => model.YearOfIncrement)</td>
                                </tr>
                                <tr>
                                    <td>Increment On</td>
                                    <td>@Html.DisplayFor(model => model.IncrementOnGrossOrBasic)</td>
                                </tr>
                                <tr>
                                    <td>New Gross Salary</td>
                                    <td>@Html.DisplayFor(model => model.NewGrossSalary)</td>
                                </tr>
                                <tr>
                                    <td>New Basic Salary</td>
                                    <td>@Html.DisplayFor(model => model.NewBasicSalary)</td>
                                </tr>
                                <tr>
                                    <td>Overtime Rate</td>
                                    <td>@Html.DisplayFor(model => model.OvertimeRate)</td>
                                </tr>
                                <tr>
                                    <td>Year</td>
                                    <td>@Html.DisplayFor(model => model.Year)</td>
                                </tr>
                                <tr>
                                    <td>Month</td>
                                    <td>@Html.DisplayFor(model => model.Month)</td>
                                </tr>
                                <tr>
                                    <td>Date Added</td>
                                    <td>@Html.DisplayFor(model => model.DateAdded)</td>
                                </tr>
                                <tr>
                                    <td>Modified Date</td>
                                    <td>@Html.DisplayFor(model => model.ModifiedDate)</td>
                                </tr>


                            </table>
                            <div class="box-footer">

                                @using (Html.BeginForm("Delete", "UserSalaryIncrement", FormMethod.Post, new { id = "frmUserSalaryIncrement" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.StarkInputButtion("Delete", "submit", "btn btn-danger", "")
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary", @style = "margin-left:5px;" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>