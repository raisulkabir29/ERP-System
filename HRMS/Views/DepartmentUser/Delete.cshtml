@model HRMS.Models.DepartmentUser

@{
    ViewBag.Title = "Delete";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.StarkAjaxFormSubmiter("frmDepartmentUser", "tbDepartmentUser", true, "Action Successfully Executed")

@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                @*<small>@ViewBag.Title</small>*@
            </h1>
        </section>
    }
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of Department User</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>DepartmentId</td>
                                    <td>@Html.DisplayFor(model => model.DepartmentId)</td>
                                </tr>
                                <tr>
                                    <td>UserId</td>
                                    <td>@Html.DisplayFor(model => model.UserId)</td>
                                </tr>


                            </table>
                            <div class="box-footer">

                                @using (Html.BeginForm("Delete", "DepartmentUser", FormMethod.Post, new { id = "frmDepartmentUser" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.StarkInputButtion("Delete", "submit", "btn btn-danger", "")
                                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary", @style = "margin-left:5px;" })
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>