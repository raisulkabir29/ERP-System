@model HRMS.Models.UserLoanPayment

@{
    ViewBag.Title = "Details";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}
<section class="content-header">
    <h1>
        @ViewBag.Title
        @*<small>Details</small>*@
    </h1>
</section>
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">

            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Detail of User Loan Payment</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive">

                    <div class="widget-sec">
                        <div class="streaming-table">
                            <table class="table table-striped table-bordered">

                                <tr>
                                    <td>UserId</td>
                                    <td>@Html.DisplayFor(model => model.UserId)</td>
                                </tr>
                                <tr>
                                    <td>LoanApplicationId</td>
                                    <td>@Html.DisplayFor(model => model.LoanApplicationId)</td>
                                </tr>
                                <tr>
                                    <td>PaymentDate</td>
                                    <td>@Html.DisplayFor(model => model.PaymentDate)</td>
                                </tr>
                                <tr>
                                    <td>PaymentYear</td>
                                    <td>@Html.DisplayFor(model => model.PaymentYear)</td>
                                </tr>
                                <tr>
                                    <td>PaymentMonth</td>
                                    <td>@Html.DisplayFor(model => model.PaymentMonth)</td>
                                </tr>
                                <tr>
                                    <td>CurrentInstallment</td>
                                    <td>@Html.DisplayFor(model => model.CurrentInstallment)</td>
                                </tr>
                                <tr>
                                    <td>CurrentInstallmentPaid</td>
                                    <td>@Html.DisplayFor(model => model.CurrentInstallmentPaid)</td>
                                </tr>
                                <tr>
                                    <td>RemainingInstallment</td>
                                    <td>@Html.DisplayFor(model => model.RemainingInstallment)</td>
                                </tr>
                                <tr>
                                    <td>PaymentsDue</td>
                                    <td>@Html.DisplayFor(model => model.PaymentsDue)</td>
                                </tr>
                                <tr>
                                    <td>Description</td>
                                    <td>@Html.DisplayFor(model => model.Description)</td>
                                </tr>


                            </table>
                            <div class="box-footer">
                                @Ajax.ModalDialogActionLink("Edit", "Edit/" + Model.Id, "Edit", "btn btn-primary")

                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



