@model HRMS.Models.UserLoanPayment

@{
    ViewBag.Title = "Edit";
    if (Ajax.IsThisAjaxRequest())
    {
        Layout = null;
    }
}

<script src="~/Content/ckeditor/ckeditor.js"></script>

@Html.StarkAjaxFormSubmiter("frmUserLoanPayment", "tbUserLoanPayment", true, "Action Successfully Executed")


@{
    if (!Ajax.IsThisAjaxRequest())
    {
        <section class="content-header">
            <h1>
                @ViewBag.Title
                @*<small>@ViewBag.Title</small>*@
            </h1>
        </section>
    }
}

<script type="text/javascript">
    //$(function () {
    //    $('select').searchableOptionList({
    //        maxHeight: '250px'
    //    });
    //});
</script>

@using (Html.BeginForm("Edit", "UserLoanPayment", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmUserLoanPayment" }))
{
    @Html.AntiForgeryToken()

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-solid box-primary">
                    <div class="box-header">
                        <h3 class="box-title">Edit User Loan Payment</h3>
                    </div>
                    <!-- form start -->

                    <div role="form">
                        <div class="box-body">


                            <div class="form-group">
                                @Html.LabelFor(model => model.UserId, new { @class = "" })
                                @Html.DropDownList("UserId", " -Select- ")
                                @Html.StarkDropDownAjaxLink("/User/Create", "AddMore", "")
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.LoanApplicationId, new { @class = "" })
                                @Html.DropDownList("LoanApplicationId", " -Select- ")
                                @Html.StarkDropDownAjaxLink("/UserLoanDetails/Create", "AddMore", "")
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PaymentDate, new { @class = "" })
                                @Html.EditorFor(model => model.PaymentDate, new { htmlAttributes = new { @class = "" } })
                                <script>$(function () { $("#PaymentDate").datepicker({ format: 'd/m/yy' }); });</script>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PaymentYear, new { @class = "" })
                                @Html.EditorFor(model => model.PaymentYear)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PaymentMonth, new { @class = "" })
                                @Html.EditorFor(model => model.PaymentMonth)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CurrentInstallment, new { @class = "" })
                                @Html.EditorFor(model => model.CurrentInstallment)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CurrentInstallmentPaid, new { @class = "" })
                                @Html.EditorFor(model => model.CurrentInstallmentPaid)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.RemainingInstallment, new { @class = "" })
                                @Html.EditorFor(model => model.RemainingInstallment)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.PaymentsDue, new { @class = "" })
                                @Html.EditorFor(model => model.PaymentsDue)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, new { @class = "" })
                                @Html.EditorFor(model => model.Description)
                            </div>

                        </div><!-- /.box-body -->
                        <div class="box-footer">
                            @Html.StarkInputButtion("Save", "submit", "btn btn-primary", "")
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}


